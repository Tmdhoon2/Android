<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotllinsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotllinSample">
        <activity
            android:name=".ControlKotlinActivity"
            android:label="ControlKotlin"
            android:exported="false" />
        <activity
            android:name=".ControlJavaActivity"
            android:label="ControlJava"
            android:exported="false" />
        <activity
            android:name=".VariableKotlinActivity"
            android:exported="false"
            android:label="VariableKotlin" />
        <activity
            android:name=".VariableJavaActivity"
            android:exported="false"
            android:label="VariableJava" />
        <activity
            android:name=".JavaActivity"
            android:exported="false"
            android:label="JavaActivity" />
        <activity
            android:name=".KotlinActivity"
            android:exported="false"
            android:label="KotlinActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>