<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="자바 스레드 시작"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코틀린 스레드 시작"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="@id/btJava"
        app:layout_constraintRight_toRightOf="@id/btJava"
        app:layout_constraintTop_toBottomOf="@id/btJava"/>

</androidx.constraintlayout.widget.ConstraintLayout>