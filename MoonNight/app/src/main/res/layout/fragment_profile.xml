<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#9C5656"
        android:text="leftbottom"
        android:textSize="30sp" />

    <Button
        android:id="@+id/rightbottom"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/center"
        android:layout_toRightOf="@id/center"
        android:background="#F1DD2B"
        android:text="rightbottom"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/leftbottom"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/rightbottom"
        android:layout_toLeftOf="@id/rightbottom"
        android:background="#4FB6E4"
        android:text="leftbottom"
        android:textSize="30sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/leftbottom"
        android:layout_toRightOf="@id/leftbottom"
        android:background="#A1DA5E"
        android:text="rightbottom"
        android:textSize="30sp" />


</RelativeLayout>